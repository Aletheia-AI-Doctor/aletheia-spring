{
  "name": "Full Stack AI Doctor",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",  // Main workspace (can switch to "python_models" too)
  "workspaceFolder": "/app",
  "settings": {
    "python.pythonPath": "/usr/local/bin/python",
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
    "ms-azuretools.vscode-docker"
  ],
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/src/main/frontend,target=/frontend,type=bind",
    "source=${localWorkspaceFolder}/src/main/models,target=/models,type=bind"
  ],
  "postCreateCommand": "pip install -r requirements.txt || true"
}
